<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.AnchorPane?>
<BorderPane prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.insa.lyon.ifa1.view.MainView">

    <top>

        <VBox id="borderPaneTop" alignment="TOP_CENTER">

            <MenuBar>
                <Menu text="Fichier">
                    <MenuItem onAction="#openFileChooser" text="Charger des points relais" />
                    <SeparatorMenuItem />
                    <MenuItem onAction="#quit" text="Quitter" />
                </Menu>
                <Menu text="Aide">
                    <MenuItem text="Documentation" />
                    <SeparatorMenuItem />
                    <MenuItem text="A propos de Pick'up" />
                </Menu>
            </MenuBar>

            <VBox alignment="BOTTOM_CENTER" minHeight="75">

                <Text text="Pick'up">
                    <font>
                        <Font name="Tahoma" size="24.0" />
                    </font>
                </Text>

                <HBox alignment="BASELINE_RIGHT">
                    <Text id="stateTxt"/>
                    <ButtonBar>
                        <buttons>
                            <Button id="btnAddPickup" onAction="#addPickup" text="Ajouter une livraison" />
                        </buttons>
                    </ButtonBar>
                </HBox>

            </VBox>

        </VBox>

    </top>

    <center>

        <StackPane id="canvasContainer">
            <Canvas id="map" />
            <Canvas id="deliverymenPaths" />
            <Canvas id="passagePoints" />
            <Canvas id="overEffects" onMouseClicked="#onCanvasClick" />
        </StackPane>

    </center>

    <bottom>

        <HBox id="borderPaneBottom" alignment="CENTER" minHeight="75" spacing="10.0">

            <Label text="Importer des points relais à partir d'un fichier XML" />
            <Button id="btnFileChooser" onAction="#openFileChooser" text="Séléctionner un fichier" />
            <Label text="Nombre de livreurs" />
            <TextField id="nbLivreurs" disable="true" text="1"/>
            <Button id="btnPath" onAction="#onCalculate" text="Calculer" disable="true"/>

        </HBox>

    </bottom>

</BorderPane>
